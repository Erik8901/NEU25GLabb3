<Window x:Class="L046_Labb3_Code_Along.Views.PackOptionsPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pack Options" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <Label Content="Pack Name:"/>
        <TextBox Text="{Binding ActivePack.Name}" Margin="0,0,0,10"/>
        <Label Content="Difficulty:"/>
        <ComboBox SelectedValue="{Binding ActivePack.Difficulty, Mode=TwoWay}" 
          SelectedValuePath="Content" Margin="0,0,0,10">
            <ComboBoxItem Content="Easy"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="Hard"/>
        </ComboBox>
        <Label Content="{Binding ActivePack.TimeLimitInSeconds}"/>
        <StackPanel Orientation="Horizontal">
            <Slider Minimum="10" Maximum="60" Value="{Binding ActivePack.TimeLimitInSeconds}" Width="390" TickFrequency="10" IsSnapToTickEnabled="True"/>
          </StackPanel>
        </StackPanel>
</Window>
